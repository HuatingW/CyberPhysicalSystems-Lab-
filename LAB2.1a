const int buttonPin = 2;     // INT0 pin
const int ledPin = 13;       // LED pin
volatile bool ledState = false;  // Shared variable between main code & ISR

void setup() {
  pinMode(ledPin, OUTPUT);
  pinMode(buttonPin, INPUT_PULLUP);  // Button active LOW
  attachInterrupt(digitalPinToInterrupt(buttonPin), toggleLED, FALLING);  // Trigger on falling edge
}

void loop() {
}

void toggleLED() {
  ledState = !ledState;
  digitalWrite(ledPin, ledState);
}
